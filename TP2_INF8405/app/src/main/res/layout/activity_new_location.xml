<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.inf8405.tp2_inf8405.activities.MainActivity">


    <TextView
        android:text="Nom lieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newloc_nameTextView"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nom"
        android:ems="10"
        android:id="@+id/newloc_NameEditText"
        android:textAlignment="center"
        android:layout_below="@+id/newloc_nameTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Prendre une photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newloc_pictureButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newloc_photoIamgeView"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="70dp"
        android:layout_alignTop="@+id/newloc_nameTextView"
        android:layout_above="@+id/newloc_pictureButton"
        android:layout_alignStart="@+id/newloc_pictureButton"
        android:layout_alignEnd="@+id/newloc_pictureButton" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newloc_okButton"
        android:layout_alignTop="@+id/newloc_pictureButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

</RelativeLayout>
