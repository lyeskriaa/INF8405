<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_create_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_desc_text"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="description"
        android:ems="10"
        android:id="@+id/event_desc_edit"
        android:textAlignment="center"
        android:layout_below="@+id/event_desc_text"
        android:layout_centerHorizontal="true" />


    <TextView
        android:text="start time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_time_create_text"
        android:textSize="18sp"
        android:layout_below="@+id/event_desc_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="dd-MM-yyyy HH:mm:ss"
        android:ems="10"
        android:id="@+id/start_time_create_edit"
        android:textAlignment="center"
        android:layout_below="@+id/start_time_create_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="end time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_time_create_text"
        android:textSize="18sp"
        android:layout_below="@+id/start_time_create_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="dd-MM-yyyy HH:mm:ss"
        android:ems="10"
        android:id="@+id/end_time_create_edit"
        android:textAlignment="center"
        android:layout_below="@+id/end_time_create_text"
        android:layout_alignStart="@+id/start_time_create_edit" />

    <Button
        android:text="Lieu #1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_choix1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/end_time_create_edit"/>

    <Button
        android:text="Lieu #2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_choix2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/event_choix1"/>

    <Button
        android:text="Lieu #3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_choix3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/event_choix2"/>



</RelativeLayout>
