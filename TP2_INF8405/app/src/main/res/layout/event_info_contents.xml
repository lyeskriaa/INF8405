<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/event_date_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/event_date_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/event_go_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participer" />
        <Button
            android:id="@+id/event_maybe_go_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peut-Ãªtre" />
        <Button
            android:id="@+id/event_no_go_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S'Absenter" />
    </LinearLayout>

</LinearLayout>